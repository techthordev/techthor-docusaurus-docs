{
  "hosting": {
    "target": "docs-techthordev-app",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/portal/**",
        "destination": "/portal/index.html"
      },
      {
        "source": "/api/leetcode/**",
        "destination": "/leetcode/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
