{
  "hosting": {
    "target": "docs-techthordev-app",
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "/api/portal/**",
        "destination": "https://compodoc-portal-api.web.app",
        "type": 302
      },
      {
        "source": "/api/leetcode/**",
        "destination": "https://compodoc-leetcode-api.web.app",
        "type": 302
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
